{
  "name": "monorepo-llama-index",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:EmanuelCampos/monorepo-llama-index.git",
  "author": "Emanuel Ferreira <contatoferreirads@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "puppeteer": "^20.4.0"
  },
  "scripts": {
    "crawler": "yarn workspace @monorepo-llama-index/crawler start",
    "web:dev": "yarn workspace @monorepo-llama-index/web dev",
    "lint": "eslint */**/*.{js,ts,tsx}",
    "lint-fix": "eslint --fix */**/*.{js,ts,tsx}",
    "pretty": "prettier --write '*/**/*.{js,ts,tsx}'",
    "prepare": "husky install",
    "precommit": "npm run lint-fix && npm run pretty",
    "prepush": "npm run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "esbuild": "^0.17.19",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8"
  }
}
